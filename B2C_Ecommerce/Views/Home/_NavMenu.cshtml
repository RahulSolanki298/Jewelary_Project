@{
    var firstHalf = Model.ProductShapeList.Take(5).ToList();
    var secondHalf = Model.ProductShapeList.Skip(5).Take(5).ToList();

    var firstDHalf = Model.DiamondShapeList.Take(5).ToList();
    var secondDHalf = Model.DiamondShapeList.Skip(5).Take(5).ToList();

    var firstShapeHalf = Model.SubcategoryList.Take(5).ToList();
    var secondShapeHalf = Model.SubcategoryList.Skip(5).Take(5).ToList();

    var firstSubCatHalf = Model.SubcategoryList.Where(x => x.CategoryName == SD.Bands).Take(5).ToList();
    var secondSubCatHalf = Model.SubcategoryList.Where(x => x.CategoryName == SD.Bands).Skip(5).Take(5).ToList();
}


<ul>
    <li class="active position-static">
