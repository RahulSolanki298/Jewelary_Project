                <ul>
                    <li class="mega-title">
                        <ul>
                            @foreach (var item in firstShapeHalf)
                            {
                            <li>
                                <a href="@Url.Action("Index","Products",new {type="Engagement",styleId=item.Id})">
                                    <img src="@SD.ImgUrl/@item.StyleImage" style="width:40px;">
                                    @item.StyleName
                                </a>
                            </li>
                            }
                        </ul>
                    </li>

                </ul>
            </li>
            <li>
