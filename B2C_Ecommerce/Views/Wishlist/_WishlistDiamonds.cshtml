@model IEnumerable<Models.DiamondData>
@using Common;

    <div class="custom-container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Wishlist Table Area -->
                <div class="cart-table table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="pro-thumbnail">SrNo.</th>
                                <th class="pro-title">Images</th>
                                <th class="pro-price">Product</th>
                                <th class="pro-quantity">Qty</th>
                                <th class="pro-quantity">Rate</th>
                                <th class="pro-subtotal">Add to Cart</th>
                                <th class="pro-remove">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                int index = 1;
                            }
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="pro-thumbnail">@(index++)</td>
                                <td class="pro-title"><a href="#"><img class="img-fluid" style="max-width:45px;height:auto;" src="@SD.ShapeImgUrl@item.IconPath" alt="Product"></a></td>
                                <td class="pro-price">@item.Carat @item.ColorName @item.ShapeName @item.ClarityName @item.LabName</td>
                                <td class="pro-quantity">@item.Quantity</td>
                                <td class="pro-price">@item.Price</td>
                                <td class="pro-subtotal">
                                    <a href="#" class="btn btn-sqr btnAddToCard" data-productId="@item.Id">
                                        Add to
                                        Cart
                                    </a>
                                </td>
                                <td class="pro-remove"><a href="#" class="remove-from-wishlist" data-productId="@item.Id"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>  