            $(".product-name").text(response.shapeName + ' ' + response.bandWidth + ' '+ response.length + ' '+response.sku);

        // Update prices
        $(".price-regular[data-sku='" + productId + "']").text('{response.Price}');
        $(".price-old[data-sku='" + productId + "']").html('<del>' + response.unitPrice + '</del>');

        // Update images
        const images = (response.productImageVideos || []).filter(x => x.imageUrl && x.imageUrl !== "-");
        if (images.length > 0) {
            const priImg = baseUrl + '/' + images[0].imageUrl.replace(/\\/g, '/');
            $(".product-large-slider .pro-large-img img").first().attr("src", priImg).attr("alt", response.colorName + " - Primary Image");
            $(".pro-nav .pro-nav-thumb img").first().attr("src", priImg);
        }

        if (images.length > 1) {
            const secImg = baseUrl + '/' + images[1].imageUrl.replace(/\\/g, '/');
            $(".product-large-slider .pro-large-img img").eq(1).attr("src", secImg).attr("alt", response.colorName + " - Secondary Image");
            $(".pro-nav .pro-nav-thumb img").eq(1).attr("src", secImg);
        }
    })
    .fail(function (xhr, status, error) {
        console.error('AJAX error:', status, error);
    });
}


