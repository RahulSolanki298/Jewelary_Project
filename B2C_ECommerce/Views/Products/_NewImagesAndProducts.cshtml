@model List<Models.ProductDTO>
@using Common;
@{
    var secImg = string.Empty;
    var priImg = string.Empty;
}
@if (Model != null)
{
    @foreach (var item in Model)
    {
        secImg = item.ProductImageVideos.LastOrDefault()?.ImageUrl;
        if (secImg != null && secImg == "-")
        {
            secImg = item.ProductImageVideos.FirstOrDefault()?.ImageUrl;
        }

        priImg=item.ProductImageVideos.FirstOrDefault()?.ImageUrl;
