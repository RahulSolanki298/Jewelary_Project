                <figure class="product-thumb product-box-with-border">
                    <a href="@Url.Action("ProductDetails", "Products", new { id = item.Id })">
                        <img class="pri-img" src="@($"{SD.BaseApiUrl}/{priImg}")" />
                        <img class="sec-img" src="@($"{SD.BaseApiUrl}/{secImg}")" />

                    </a>
                    <div class="product-badge">
                        <div class="product-label new">
