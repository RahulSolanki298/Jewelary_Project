                        <a href="@Url.Action("ProductDetails", "Products", new { id = item.Id })" class="btn btn-cart"> Add to Card</a>
                    </div>
                </figure>
                <div class="product-caption text-left product-box-desc">
                    <div class="product-identity">
                        <p class="manufacturer-name"><a href="#">@item.ShapeName @item.BandWidth @item.Length @item.Sku</a></p>
                    </div>
                    <div class="price-box">
