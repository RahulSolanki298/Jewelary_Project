@model Models.CustomerRegisterDTO
<!-- Bootstrap & ReCAPTCHA -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<!-- Custom Styles -->
<style>
    input.form-control, select.form-control {
        border-radius: 6px;
        padding: 12px 15px;
        font-size: 3rem;
        box-shadow: none;
    }

    .btn-primary {
        background-color: #1d3557;
        border-color: #1d3557;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #457b9d;
            border-color: #457b9d;
        }

    .login-reg-form-wrap {
        background: #fff;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
</style>

<!-- Banner Section -->
<section>
    <div class="listingpage">
        <div class="home-giftbanner-main position-relative left-text-banner">
            <a href="#" aria-label="" class="d-block">
                <div class="ole-image-banner thumb text-center">
                    <img src="~/assets/img/banner/filter-cover-image.jpg" class="filter-top-image" alt="Banner" />
                </div>
            </a>
        </div>
    </div>
</section>

<!-- Registration Form -->
<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-12">
            <div class="login-reg-form-wrap sign-up-form shadow-sm p-4 rounded bg-white">
                <h5 class="mb-3 text-center"><b>Create Your Club Account</b></h5>

                <div class="mb-4 mt-4">
                    <p><i class="fa fa-clock-o me-2" style="font-size: 1.2rem;"></i> Easily edit your profile, view and track your orders, manage returns, and more</p>
                    <p><i class="fa fa-shopping-bag me-2" style="font-size: 1.2rem;"></i> Checkout faster with saved billing and shipping addresses</p>
                    <p><i class="fa fa-gift me-2" style="font-size: 1.2rem;"></i> Receive exclusive offers and share your wishlist</p>
                </div>

                <form id="signupForm" asp-controller="Account" asp-action="RegisterProcess" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label><b>First Name</b> <span class="text-danger">*</span></label>
                        <input asp-for="FirstName" class="form-control-lg w-100" placeholder="First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label><b>Middle Name</b> <span class="text-danger">*</span></label>
                        <input asp-for="MiddleName" class="form-control-lg w-100" placeholder="Middle Name" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label><b>Last Name</b> <span class="text-danger">*</span></label>
                        <input asp-for="LastName" class="form-control-lg w-100" placeholder="Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label><b>Gender</b> <span class="text-danger">*</span></label>
                        <select asp-for="Gender" class="form-control-lg w-100">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label><b>Phone Number</b> <span class="text-danger">*</span></label>
                        <input asp-for="PhoneNumber" class="form-control-lg w-100" placeholder="Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label><b>Email Id</b> <span class="text-danger">*</span></label>
                        <input asp-for="EmailId" class="form-control-lg w-100" placeholder="Email Address" />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label><b>Password</b> <span class="text-danger">*</span></label>
                        <input asp-for="TextPassword" type="password" class="form-control-lg w-100" placeholder="Password" />
                        <span asp-validation-for="TextPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label><b>Confirm Password</b> <span class="text-danger">*</span></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control-lg w-100" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label><b>Recaptcha</b></label>
                        <div class="g-recaptcha" data-sitekey="6LdSim0rAAAAAOhx96SORgQc1BA6v1j3srlg_9lk"></div>
                    </div>

                    <div class="form-group mb-3 text-center">
                        <button type="submit" class="btn btn-primary w-50 py-2">Create Account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


