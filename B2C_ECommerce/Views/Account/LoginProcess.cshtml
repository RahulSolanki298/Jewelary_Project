@model Models.CustomerLoginDTO

<!-- Bootstrap -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<!-- Google Identity Services -->
<script src="https://accounts.google.com/gsi/client" async defer></script>

<style>
    body {
        background: #f5f8fa;
        font-size: 16px;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        background: #fff;
        padding: 3rem 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    h5 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
        color: #1d3557;
    }

    .form-control {
        border-radius: 6px;
        padding: 14px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #1d3557;
        border: none;
        font-weight: 600;
        padding: 12px;
        font-size: 1rem;
    }

        .btn-primary:hover {
            background-color: #457b9d;
        }

    .google-btn {
        margin-top: 1rem;
    }

    .remember-meta {
        font-size: 0.9rem;
    }

    .form-footer {
        margin-top: 1.5rem;
    }

        .form-footer a {
            color: #1d3557;
        }
</style>

<div class="login-container">
    <div class="login-card">
        <h5>Sign In</h5>

        <form asp-action="LoginProcess" asp-controller="Account" method="post">
            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Email or Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                </div>
                <a href="#" class="forget-pwd">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Login</button>

            <div class="google-btn text-center">
                <div id="g_id_onload"
                     data-client_id="YOUR_GOOGLE_CLIENT_ID"
                     data-context="signin"
                     data-ux_mode="popup"
                     data-callback="handleCredentialResponse"
                     data-auto_prompt="false">
                </div>

                <div class="g_id_signin"
                     data-type="standard"
                     data-shape="rectangular"
                     data-theme="outline"
                     data-text="sign_in_with"
                     data-size="large"
                     data-logo_alignment="left">
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Google Login Callback Script -->
<script>
    function handleCredentialResponse(response) {
        // TODO: Send response.credential to your server for verification
        console.log("Google ID Token:", response.credential);
        // You can post this token to your backend for server-side login
    }
</script>
