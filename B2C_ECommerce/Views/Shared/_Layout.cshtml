    <!-- Inline script stays the same -->
    <script>
        $(document).ready(function () {
            getWishlistCounter();
            getAddToCardCounter();
            getHomePageNav();

            $("#layout_header").on("click", "#Add2CardDisplay", function () {
                debugger;
                    let diamondCardlist = JSON.parse(localStorage.getItem("diamondCartlist")) || [];
                    let jewelCardlist = JSON.parse(localStorage.getItem("jewelCartlist")) || [];

                    if (diamondCardlist.length > 0 || jewelCardlist.length > 0) {
                        $.ajax({
                            url: '@Url.Action("GetAdd2CardListByIds", "AddToCard")',
                            type: 'GET',
                            data: {
                                diamondIds: diamondCardlist.join(','),
                                productIds: jewelCardlist.join(',')
                            },
                            success: function (data) {
                                console.log("AJAX success:", data);
                                $("#minicard").html('');
                                $("#minicard").html(data);
                            },
                            error: function (error) {
                                console.error('Error fetching data:', error);
                            }
                        });
                    }
            });

            $("#layout_header").on("click", "#btnClose", function () {
                $("#minicard").hide();
            });
        });

        function getWishlistCounter() {
            let wishlist = JSON.parse(localStorage.getItem("wishlist")) || [];
            let ProductWishlist = JSON.parse(localStorage.getItem("ProductWishlist")) || [];
            $("#wishlistCounter").text(wishlist.length + ProductWishlist.length);
            $("#wishlistMobileCounter").text(wishlist.length + ProductWishlist.length);
        }

        function getAddToCardCounter()
        {
            let daiamondCard = JSON.parse(localStorage.getItem("diamondCartlist")) || [];
            let productCart = JSON.parse(localStorage.getItem("productCartlist")) || [];
            $("#addtoCardCounter").text(daiamondCard.length+productCart.length);
            $("#addtoCardMobileCounter").text(daiamondCard.length + productCart.length);
        }


        function getHomePageNav()
        {
            $.ajax({
                url: '@Url.Action("GetPrograms", "Home")',  // Replace with your actual URL path
                type: 'GET',
                success: function (response) {
                    $('#navMenuDynamic').html("");
                    $('#navMenuDynamic').html(response);
                },
                error: function (xhr, status, error) {
                    console.error("There was an error with the AJAX request: ", error);
                }
            });
        }
    </script>


    @await RenderSectionAsync("Scripts", required: false)
