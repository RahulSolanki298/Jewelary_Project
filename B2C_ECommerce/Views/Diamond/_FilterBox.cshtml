        <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6">
            <div class="d-flex mb-2">
                <div class="filter-label">
                    <label for="minClarity" class="form-label" style="padding-right: 2px;"> Polish </label>
                </div>
                <div class="d-flex">
                    <input type="hidden" id="txtPolishIds" />
                    <input type="text" class="form-control txt-bolder me-2 range_slider" id="minPolish" disabled />
                    - <input type="text" class="form-control txt-bolder range_slider margin-left-2" id="maxPolish" disabled />
                </div>
            </div>
            <div id="Polish-slider" class="slider filter-scroll-bg"></div>
        </div>

        <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6">
            <div class="d-flex mb-2">
                <div class="filter-label">
                    <label for="minClarity" class="form-label" style="padding-right: 2px;"> Fluor. </label>
                </div>
                <div class="d-flex">
                    <input type="hidden" id="txtFluorIds" />
                    <input type="text" class="form-control txt-bolder me-2 range_slider" id="minFluor" disabled />
                    - <input type="text" class="form-control txt-bolder range_slider margin-left-2" id="maxFluor" disabled />
                </div>
            </div>
            <div id="Fluor-slider" class="slider filter-scroll-bg"></div>
