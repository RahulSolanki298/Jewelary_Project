@using Common

<div class="row">
    <!-- Shapes Section -->
    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-12" id="dtShape">
        <h4>Shapes</h4>
        <div class="diamond-icon-dt">
            <div class="d-flex flex-wrap gap-icon-filter" id="shape-list">
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="col-xxl-8 col-xl-8 col-lg-8 col-md-12">
        <div class="row">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <!-- Filters Title -->
                <h4 class="mb-0">Filters</h4>

                <!-- Reset Button -->
                <div class="reset btn btn-dark text-capitalize" id="btnReset" title="RESET"><i class="fa fa-refresh"></i> RESET FILTERS</div>
            </div>

            @*<div class="reset btn btn-dark text-capitalize" id="btnReset" title="RESET">RESET</div>*@
        </div>
        <div class="row">
            <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6">
                <div class="d-flex mb-2">
                    <div class="filter-label">
                        <label for="minCarat" class="form-label" style="padding-right:2px;">Carat Size <span><img src="@SD.ShapeImgUrl/assets/img/icon/diamond-icon.png" style="width:23px;" /></span> </label>
                    </div>
                    <div class="d-flex">
                        <input type="text" class="form-control txt-bolder me-2 range_slider" placeholder="Min Carat" id="minCarat" disabled />
                        - <input type="text" class="form-control txt-bolder range_slider margin-left-2" placeholder="Max Carat" id="maxCarat" disabled />
                    </div>
                </div>
                <div id="carat-size-slider" class="slider filter-scroll-bg"></div>
            </div>

            <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6">
                <div class="d-flex mb-2">
                    <div class="filter-label">
                        <label for="minColor" class="form-label" style="padding-right: 2px;">Color </label>
                    </div>

                    <div class="d-flex">
                        <input type="hidden" id="txtColorIds" />
                        <input type="text" class="form-control txt-bolder me-2 range_slider" id="minColor" disabled />
                        - <input type="text" class="form-control txt-bolder range_slider margin-left-2" id="maxColor" disabled />
                    </div>

                </div>
                <div id="color-slider" class="slider filter-scroll-bg"></div>
            </div>

            <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6">
                <div class="d-flex mb-2">
                    <div class="filter-label">
                        <label for="minCut" class="form-label" style="padding-right: 2px;">Cut</label>
                    </div>
                    <div class="d-flex">
                        <input type="hidden" id="txtCutIds" />
                        <input type="text" class="form-control txt-bolder me-2 range_slider" id="minCut" disabled />
                        - <input type="text" class="form-control txt-bolder range_slider margin-left-2" id="maxCut" disabled />
                    </div>
                </div>
                <div id="Cut-slider" class="slider filter-scroll-bg"></div>
            </div>

            <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6">
                <div class="d-flex mb-2">
                    <div class="filter-label">
                        <label for="minPrice" class="form-label" style="padding-right: 2px;">Price <span>$</span></label>
                    </div>
                    <div class="d-flex">
                        <input type="text" class="form-control txt-bolder me-2 range_slider" placeholder="Min Price" id="minPrice" disabled />
                        - <input type="text" class="form-control txt-bolder range_slider margin-left-2" placeholder="Max Price" id="maxPrice" disabled />
                    </div>
                </div>
                <div id="price-slider" class="slider filter-scroll-bg"></div>
            </div>

            <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6">
                <div class="d-flex mb-2">
                    <div class="filter-label">
                        <label for="minClarity" class="form-label" style="padding-right: 2px;">Clarity</label>
                    </div>
                    <div class="d-flex">
                        <input type="hidden" id="txtClarityIds" />
                        <input type="text" class="form-control txt-bolder me-2 range_slider" id="minClarity" disabled />
                        - <input type="text" class="form-control txt-bolder range_slider margin-left-2" id="maxClarity" disabled />
                    </div>
                </div>
                <div id="Clarity-slider" class="slider filter-scroll-bg"></div>
            </div>


            <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6 ds_fbox_inner_main6 ds_fbox_inner">
                <!-- What metter Filter [START] -->
                <div class="what-matter-dtlmain">
                    <input type="hidden" name="sel_matter_box_txt" id="sel_matter_box_txt" value="">
                    <div class="ds_opsun">
                        <label class="form-label" style="padding-right: 2px;">What matters to you most?</label>
                        <div class="content">
                            <button class="btn btn-dark text-capitalize" id="btnPrice">Price</button>
                            <button class="btn btn-dark text-capitalize" id="btnQuality">Quality</button>
                            <button class="btn btn-dark text-capitalize" id="btnViewAll">View All</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

<div class="row">
    <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-5">
        <div class="d-flex chk-filter gap-3 mt-3">
            @* <label><input type="checkbox" id="chkAetherDiamonds" class="text-capitalize"> Aether Diamonds</label> *@
            <label><input type="checkbox" id="chkQuickShip" class="text-capitalize themecheckbox"> QUICK SHIP</label>
            <label>Report <i class="fa fa-question-circle "></i></label>
            <input type="hidden" id="txtLabNames" value="" />
            <label><input type="checkbox" id="chkIGI" class="text-capitalize" title="IGI"> IGI</label>
            <label><input type="checkbox" id="chkGIA" class="text-capitalize" title="GIA"> GIA</label>
        </div>
    </div>
    <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-7">
        <div class="mt-3" style="float:right !important;">
            <button class="btn btn-dark text-capitalize" id="btnCompareDiamonds">Compare Diamonds <span id="proCounter"></span></button>
            @*<button class="btn btn-dark text-capitalize" id="btnTakeQUIZ">Take A QUIZ</button>*@
            <button class="btn btn-dark text-capitalize" id="btnMoreFilter">More Filter</button>
            <button class="btn btn-dark text-capitalize" id="btnLessFilter" style="display:none;">Less Filter</button>
        </div>
    </div>
</div>
<!-- Additional Filters -->

