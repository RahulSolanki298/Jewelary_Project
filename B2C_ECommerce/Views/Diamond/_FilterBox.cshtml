        <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-6">
            <div class="d-flex mb-2">
                <div class="filter-label">
                    <label for="minClarity" class="form-label" style="padding-right: 2px;"> Symmetry </label>
                </div>
                <div class="d-flex">
                    <input type="hidden" id="txtSymmetyIds" />

                    <input type="text" class="form-control txt-bolder me-2 range_slider" id="minSymmetry" disabled />
                    - <input type="text" class="form-control txt-bolder range_slider margin-left-2" id="maxSymmetry" disabled />
