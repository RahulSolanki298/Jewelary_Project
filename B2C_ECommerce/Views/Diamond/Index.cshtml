</div>

@section Scripts {
	<script>
		$(function() {
			$("#carat-size-slider").slider({
				range: true,
				min: 0,
				max: 10,
				step:0.1,
				values: [2, 8],
				slide: function(event, ui) {
					$("#minCaratSize").val(ui.values[0]);
					$("#maxCaratSize").val(ui.values[1]);
				}
			});

			$("#price-slider").slider({
				range: true,
				min: 500,
				max: 50000,
				step:0.01,
				values: [5000, 30000],
				slide: function(event, ui) {
					$("#minPrice").val("$"+ui.values[0]);
					$("#maxPrice").val("$"+ui.values[1]);
				}
			});

			$("#color-slider").slider({
				range: true,
				min: 500,
				max: 50000,
				step: 1, // Default step (we'll change it dynamically)
				slide: function(event, ui) {
				// Calculate step based on the slider value
				let currentValue = ui.value;

				// Define your custom steps
				const F = 500;
				const M = 1000;
				const T = 5000;

				let step = 1; // Default step

				if (currentValue <= F) {
				  step = F;
				} else if (currentValue <= M) {
				  step = M;
				} else {
				  step = T;
				}

				// Log the step to see the behavior
				console.log("Current step: ", step);

				// Optionally, update the slider step value dynamically here (not necessary but possible)
				$(this).slider('option', 'step', step);
				}
		});

			

			$("#minPrice").val($("#price-slider").slider("values", 0));
			$("#maxPrice").val($("#price-slider").slider("values", 1));
			$("#minCaratSize").val($("#carat-size-slider").slider("values",0));
			$("#maxCaratSize").val($("#carat-size-slider").slider("values",1));
		});
	</script>
}
