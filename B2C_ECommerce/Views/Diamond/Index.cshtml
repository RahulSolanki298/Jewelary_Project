<!-- Breadcrumb Area -->
<div class="breadcrumb-area py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="index.html"><i class="fa fa-home"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Diamonds</li>
            </ul>
        </nav>
    </div>
</div>

<!-- Product Section -->
<section class="product-area section-padding">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="title">Shop Lab Created Loose Diamonds</h2>
        </div>

        <div class="card border-1 shadow-sm" style="border: 1px solid #c29958;">
            <div class="card-body p-4">

                <div class="row g-4">
                    <!-- Shapes Section -->
                    <div class="col-lg-3">
                        <h4>Shapes</h4>
                        <div class="d-flex flex-wrap gap-3">
                            <div class="shape-btn text-center">
                                <img src="https://images.grownbrilliance.com/general_images/homeimg/diamond_shape/oval.png" alt="Oval" />
                                <span>Oval</span>
                            </div>
                            <div class="shape-btn text-center">
                                <img src="https://images.grownbrilliance.com/general_images/homeimg/diamond_shape/round.png" alt="Round" />
                                <span>Round</span>
                            </div>
                            <div class="shape-btn text-center">
                                <img src="https://images.grownbrilliance.com/general_images/homeimg/diamond_shape/emerald.png" alt="Emerald" />
                                <span>Emerald</span>
                            </div>
                            <div class="shape-btn text-center">
                                <img src="https://images.grownbrilliance.com/general_images/homeimg/diamond_shape/princess.png" alt="Princess" />
                                <span>Princess</span>
                            </div>
                            <div class="shape-btn text-center">
                                <img src="https://images.grownbrilliance.com/general_images/homeimg/diamond_shape/heart.png" alt="Heart" />
                                <span>Heart</span>
                            </div>
                        </div>
                    </div>

                    <!-- Filters Section -->
                    <div class="col-lg-3">
                        <h4>Filters</h4>
                        <div class="mb-3">
                            <label>Carat Size</label>
                            <input type="range" class="form-range" id="carat-slider" min="0" max="10" step="0.1" value="5">
                            <p>Selected: <span id="carat-value">5</span> Carats</p>
                        </div>

                        <div class="mb-3">
                            <label>Price</label>
                            <input type="range" class="form-range" id="price-slider" min="590" max="69025" step="10" value="590">
                            <p>Selected: $<span id="price-value">590</span></p>
                        </div>
                    </div>

                    <!-- More Filters -->
                    <div class="col-lg-3">
                        <h4>More Filters</h4>
                        <div class="mb-3">
                            <label>Color</label>
                            <input type="range" class="form-range" id="color-slider" min="1" max="3" step="1" value="3">
                            <p>Selected: <span id="color-value">D</span></p>
                        </div>

                        <div class="mb-3">
                            <label>Cut</label>
                            <input type="range" class="form-range" id="cut-slider" min="1" max="2" step="1" value="2">
                            <p>Selected: <span id="cut-value">Ideal</span></p>
                        </div>

                        <div class="mb-3">
                            <label>Clarity</label>
                            <input type="range" class="form-range" id="clarity-slider" min="1" max="5" step="1" value="5">
                            <p>Selected: <span id="clarity-value">FL</span></p>
                        </div>
                    </div>

                    <!-- Image & Additional Filters -->
                    <div class="col-lg-3 text-center">
                        <img src="https://www.pld.live/images/hpht-img.jpg" class="img-fluid rounded shadow-sm" alt="Diamond Process">
                    </div>
                </div>

                <!-- Additional Filters -->
                <div class="d-flex gap-3 mt-3">
                    <label><input type="checkbox"> Aether Diamonds</label>
                    <label><input type="checkbox"> QUICK SHIP</label>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Product Table -->
<div class="container mt-4">
    <div class="shop-main-wrapper section-padding">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>Actions</th>
                        <th>Shape</th>
                        <th>Carat</th>
                        <th>Color</th>
                        <th>Clarity</th>
                        <th>Cut</th>
                        <th>CERT.</th>
                        <th>Polish</th>
                        <th>Symmetry</th>
                        <th>Depth</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <i class="fa fa-heart text-danger"></i>
                            <i class="fa fa-exchange-alt text-primary ms-2"></i>
                        </td>
                        <td>Emerald</td>
                        <td>10.67 ct</td>
                        <td>F</td>
                        <td>VS1</td>
                        <td>Ideal</td>
                        <td>GIA</td>
                        <td>Excellent</td>
                        <td>Excellent</td>
                        <td>67.40%</td>
                        <td>$26,995</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {  
    <script>
        const caratSlider = document.getElementById('carat-slider');
        const caratValue = document.getElementById('carat-value');

        caratSlider.addEventListener('input', function()
        {
          caratValue.textContent = caratSlider.value;
        });
    </script>
}
