										<input type="text" class="form-control txt-bolder" placeholder="Max Carat" id="maxCaratSize" />
									</div>
								</div>
							</div>
							<div id="carat-size-slider" class="slider"></div>
						</div>

						<!-- Price Filter -->
						<div class="mb-4">
							<div class="row filter-cls">
								<div class="col-6">
									<label for="minPrice" class="form-label">Price <span>$</span></label>
								</div>
								<div class="col-6">
									<div class="d-flex mb-2">
										<input type="text" class="form-control txt-bolder me-2" placeholder="Min Price" id="minPrice" />
										<input type="text" class="form-control txt-bolder" placeholder="Max Price" id="maxPrice" />
									</div>
								</div>
							</div>
							<div id="price-slider" class="slider"></div>
						</div>
