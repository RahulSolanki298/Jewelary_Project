    <script>
        const slider = document.getElementById('sliderTrack');
        let slides = Array.from(slider.children);
        const gap = 20;

        // Clone the slides and append them to enable looping
        function cloneSlides() {
          slides.forEach(slide => {
            const clone = slide.cloneNode(true);
            slider.appendChild(clone);
          });
          slides = Array.from(slider.children);
        }

        cloneSlides();

        function scrollSlider(direction) {
          // Calculate current slide width dynamically
          const slideWidth = slider.querySelector('.collection-slide').offsetWidth + gap;
          slider.scrollBy({ left: direction * slideWidth, behavior: 'smooth' });

          const maxScrollLeft = slider.scrollWidth - slider.clientWidth - slideWidth;
          if (slider.scrollLeft >= maxScrollLeft - slideWidth) {
            cloneSlides();
          }
        }

        // Ensure responsiveness on resize
        window.addEventListener('resize', () => {
          // No action needed here anymore as we recalculate width on scroll
        });
    </script>

