@model DataAccess.Entities.AboutUs

@{
    ViewData["Title"] = "AboutUs";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <form asp-action="AboutUs" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <input asp-for="Id" class="form-control" type="hidden" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description" class="control-label"></label>
            <textarea id="Description" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <button type="submit" class="btn btn-theme mt-2">Submit</button>
            <a href="@Url.Action("Index","Setting")" class="btn btn-danger mt-2">Back to list</a>
        </div>
    </form>
</div>
