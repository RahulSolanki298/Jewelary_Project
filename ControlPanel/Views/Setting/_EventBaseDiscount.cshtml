@model DataAccess.Entities.EventSites

<div class="container mt-5">
    <h2>Create New Event </h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="EventName" class="form-label">Event Name</label>
            <input asp-for="EventName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Main Screen Popup Image  (Note: Image file Only) </label>
            <input type="file" name="imageFile" class="form-control" accept="image/*" />
        </div>

        <div class="mb-3">
            <label asp-for="DiscountOn" class="form-label">Discount On</label>
            <select asp-for="DiscountOn" class="form-select">
                <option value="Product">Product</option>
                <option value="All Products">All Products</option>
            </select>
        </div>

        <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" asp-for="DiscountOnDiamond" id="diamondCheckbox" />
            <label class="form-check-label" for="diamondCheckbox">Apply Discount on Diamond</label>
        </div>

        <div id="diamondProducts" class="mb-3 d-none">
            <label asp-for="SelectedDiamonds" class="form-label">Selected Diamonds</label>
            <input asp-for="SelectedDiamonds" class="form-control" />
        </div>

        <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" asp-for="DiscountOnJewellery" id="jewelleryCheckbox" />
            <label class="form-check-label" for="jewelleryCheckbox">Apply Discount on Jewellery</label>
        </div>

        <div id="jewelleryProducts" class="mb-3 d-none">
            <label asp-for="SelectedProducts" class="form-label">Selected Jewellery Products</label>
            <input asp-for="SelectedProducts" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Discount" class="form-label">Discount (%)</label>
            <input asp-for="Discount" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="IsActive" />
            <label class="form-check-label">Active</label>
        </div>

        <button type="submit" class="btn btn-theme">Create Event</button>
    </form>
</div>