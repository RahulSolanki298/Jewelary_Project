@model DataAccess.Entities.EventSites

<div class="container mt-5">
    <h2>Create New Event </h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 p-1">
                <label asp-for="EventName" class="form-label">Event Name</label>
                <input asp-for="EventName" class="form-control" />
            </div>
            <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-9 p-1">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-6 p-1">
                <label class="form-label">Main Screen Popup Image  (Note: Image file Only) </label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
            </div>
            <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 p-1">
                <label asp-for="DiscountOn" class="form-label">Discount On</label>
                <select asp-for="DiscountOn" class="form-select">
                    <option value="Product">Product</option>
                    <option value="All Products">All Products</option>
                </select>
            </div>
            <div class="col-xxl-6 col-xl-5 col-lg-5 col-md-6 p-1">
                <br />
                <input class="form-check-input" type="checkbox" asp-for="DiscountOnDiamond" id="diamondCheckbox" />
                <label class="form-check-label" for="diamondCheckbox">Apply Discount on Diamond</label>
                <input class="form-check-input" type="checkbox" asp-for="DiscountOnJewellery" id="jewelleryCheckbox" />
                <label class="form-check-label" for="jewelleryCheckbox">Apply Discount on Jewellery</label>
            </div>

            <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 p-1">
                <div id="diamondProducts" class="mb-3 d-none">
                    <label asp-for="SelectedDiamonds" class="form-label">Selected Diamonds</label>
                    <input asp-for="SelectedDiamonds" class="form-control" />
                </div>
            </div>

            <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 p-1">
                <div id="jewelleryProducts" class="mb-3 d-none">
                    <label asp-for="SelectedProducts" class="form-label">Selected Jewellery Products</label>
                    <input asp-for="SelectedProducts" class="form-control" />
                </div>
            </div>

            <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 p-1">
                <label asp-for="Discount" class="form-label">Discount (%)</label>
                <input asp-for="Discount" class="form-control" />
            </div>
            <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 p-1">
                <label asp-for="StartDate" class="form-label">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>
            <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 p-1">
                <label asp-for="EndDate" class="form-label">End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>
            <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 p-1">
                <br />
                <input class="form-check-input border-1" type="checkbox" asp-for="IsActive" />
                <label class="form-check-label">Active</label>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-xl-12 p-1 offset-5">
                <button type="submit" class="btn btn-theme">Create Event</button>
            </div>
        </div>

    </form>
</div>