@model List<DataAccess.Entities.ProductStyles>

@{
    int idx = 0;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta3/css/bootstrap-select.min.css" />

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Product Programs</h2>
        <a class="btn btn-theme" id="btnShowProduct">
            <i class="bi bi-plus-circle me-1"></i>
            @ViewBag.Title
        </a>
    </div>

    <div class="row">
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body p-0">

                    <!-- Tab navigation -->
                    <ul class="nav nav-tabs" id="productStyleTabs" role="tablist">
                        @foreach (var item in Model)
                        {
                            var isActive = idx == 0 ? "active" : "";
                            var isSelected = idx == 0 ? "true" : "false";
                            <li class="nav-item" role="presentation">
                                <button class="nav-link @isActive"
                                        id="tab-@idx"
                                        data-bs-toggle="tab"
                                        data-bs-target="#tab-content-@idx"
                                        type="button"
                                        role="tab"
                                        aria-controls="tab-content-@idx"
                                        aria-selected="@isSelected">
                                    @item.StyleName
                                </button>
                            </li>
                            idx++;
                        }
                    </ul>

                    <!-- Tab content container -->
                    <div class="tab-content p-3" id="productStyleTabsContent">
                        <!-- Dynamic content will be injected here -->
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen modal-dialog-scrollable" id="allProduct">
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap Select JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta3/js/bootstrap-select.min.js"></script>

    <script>
        $(document).ready(function () {
            loadStyleProducts();


        $('#allProduct').on('click', '#btnAddInProgram', function (e) {
        debugger;
            e.preventDefault(); // prevent default button action

            var selectedIds = [];
            $('.chkId:checked').each(function () {
                selectedIds.push($(this).val());
            });

            var selectedStyleId = $('#styleList').val();

            var token = $('input[name="__RequestVerificationToken"]').val();

            if (selectedStyleId.length === 0) {
                alert('Please select at least one item.');
                return;
            }

            if (!selectedStyleId) {
                alert('Please select a style.');
                return;
            }

            var dataToSend = {
                ids: selectedIds,
                styleId: selectedStyleId
            };

            $.ajax({
                url: '@Url.Action("BulkUpdateStatus", "ProductStyles")',
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                headers: {
                    'RequestVerificationToken': token
                },
                data: JSON.stringify(dataToSend),
                success: function (response) {
                    if (response.success) {
                        alert('Product has been added successfully.');
                        // Optionally, reload only part of the UI, or update badges/counts
                        location.reload();
                    } else {
                        alert(response.message || 'Something went wrong.');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('AJAX Error:', error);
                    alert('Error occurred while processing your request.');
                }
            });
        });



            $("#btnShowProduct").on("click", function () {
                $.ajax({
                    url: '@Url.Action("ShowAllPoducts", "ProductStyles")',
                    type: 'GET',
                    success: function (result) {
                        $('#productModal #allProduct').html("");
                        $('#productModal #allProduct').html(result);
                        $('#productModal').modal('show');
                    },
                    error: function (xhr, status, error) {
                        console.error('Error loading all products:', xhr.responseText, status, error);
                    }
                });
            });

            function loadStyleProducts() {
                $.ajax({
                    url: '@Url.Action("GetProductStyleItems", "ProductStyles")',
                    type: 'GET',
                    success: function (result) {
                        $('#productStyleTabsContent').html(result);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error loading product styles:', xhr.responseText, status, error);
                    }
                });
            }
        });
    </script>
}
