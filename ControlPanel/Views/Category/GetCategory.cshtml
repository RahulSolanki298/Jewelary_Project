@model DataAccess.Entities.Category

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col">
            <h4 class="text-uppercase fw-bold border-bottom pb-2">@ViewBag.Title</h4>
        </div>
    </div>
    <div class="row">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-xl-10">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-lg-10 col-md-10 col-sm-8">
                                <form asp-action="SaveCategory" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group mb-3">
                                        <input asp-for="Id" class="form-control" type="hidden" />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="Prefix" class="control-label"></label>
                                        <input asp-for="Prefix" class="form-control" />
                                        <span asp-validation-for="Prefix" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="Title" class="control-label"></label>
                                        <input asp-for="Title" class="form-control" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="SEO_Title" class="control-label"></label>
                                        <input asp-for="SEO_Title" class="form-control" />
                                        <span asp-validation-for="SEO_Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="control-label">SEO URL</label>
                                        <input asp-for="SEO_Url" class="form-control me-2" id="seoUrlInput" />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="DisplayOrder" class="control-label"></label>
                                        <input asp-for="DisplayOrder" class="form-control" />
                                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="ImageFile" class="control-label">Category Image</label>
                                        <input asp-for="ImageFile" class="form-control" type="file" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>

                                    </div>

                                    <div class="form-group mb-3">
                                        <label asp-for="ProductType" class="control-label"></label>
                                        <input asp-for="ProductType" class="form-control" />
                                        <span asp-validation-for="ProductType" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-check mb-3">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="IsActivated" /> @Html.DisplayNameFor(model => model.IsActivated)
                                        </label>
                                    </div>
                                 
                                    <div class="form-check mb-3">
                                        <button type="submit" class="btn btn-theme mt-2">Submit</button>
                                        <a href="@Url.Action("Index","Category")" class="btn btn-danger mt-2">Back to list</a>
                                    </div>
                                </form>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-4">
                                <div>
                                    @if (@Model.CategoryImage != null)
                                    {
                                        <img src="@Model.CategoryImage" id="imagePreview" class="img-fluid img-responsive img-thumbnail" />
                                    }
                                    else
                                    {
                                        <img src="~/assets/img/no-image.png" id="imagePreview" class="img-fluid img-responsive img-thumbnail" />

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            function previewImage(event) {
                const reader = new FileReader();
                reader.onload = function () {
                    const output = document.getElementById('imagePreview');
                    output.src = reader.result;
                    output.style.display = 'block';
                };
                reader.readAsDataURL(event.target.files[0]);
            }

            function copySEOUrl() {
                const input = document.getElementById("seoUrlInput");
                input.select();
                input.setSelectionRange(0, 99999); // For mobile devices
                document.execCommand("copy");
            }
        </script>
    }
