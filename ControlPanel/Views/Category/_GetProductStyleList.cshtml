@using DataAccess.Entities
@using Common
@model List<ProductStyles>


<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Product Programs(Styles)</h2>
        <a class="btn btn-theme" href="@Url.Action("UpsertStyle", "ProductStyles")">
            <i class="bi bi-plus-circle me-1"></i>
            @ViewBag.Title
        </a>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive"  style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-bordered table-hover align-middle" id="categoryTable">
                            <thead class="table-light">
                                <tr>
                                    <th>
                                        <input type="checkbox" class="form-check-input chkId" id="chkAllIds" />
                                    </th>
                                    <th>Image</th>
                                    <th>Category Name</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="clickable-row" data-propertyName="@item.StyleImage">
                                            <td>
                                                <input type="checkbox" class="form-check-input chkId" value="@item.Id" />
                                            </td>
                                            <td>
                                                <img src="@($"{SD.ImgUrl}/{item.StyleImage}")"
                                                     alt="@item.StyleName"
                                                     class="img-thumbnail"
                                                     style="height: 100px; width: auto;" />
                                            </td>
                                            <td>@item.StyleName</td>
                                            <td>
                                                <span class="badge @(item.IsActivated == true ? "bg-success" : "bg-secondary")">
                                                    @(item.IsActivated == true ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="dropdown">
                                                    <a class="" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bi bi-three-dots-vertical"></i>
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li><a class="dropdown-item" href="#">Edit</a></li>
                                                        <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No data found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>