@using DataAccess.Entities
@using Common
@model IEnumerable<Category>

<table class="table" id="categoryTable">
    <thead>
        <tr>
            <th scope="col"><input type="checkbox" class="chkId" id="chkAllIds" /></th>
            <th scope="col">
                Image
            </th>
            <th scope="col">Status</th>
            <th scope="col">
                Category Name
            </th>
            <th scope="col">Title</th>
            <th scope="col">Prefix</th>
            <th scope="col">SEO Title</th>
            <th scope="col">SEO URL</th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="col"><input type="checkbox" class="chkId" value="@item.Id" /></td>
                    <td scope="col">
                        <img src="@SD.ImgUrl/@item.CategoryImage" style="height:100px;" />
                    </td>
                    <td scope="col">@item.IsActivated</td>
                    <td scope="col">
                        @item.Name
                    </td>
                    <td scope="col">@item.Title</td>
                    <td scope="col">@item.Prefix</td>
                    <td scope="col">@item.SEO_Title</td>
                    <td scope="col">@item.SEO_Url</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12"> No data found</td>
            </tr>
        }
    </tbody>
</table>