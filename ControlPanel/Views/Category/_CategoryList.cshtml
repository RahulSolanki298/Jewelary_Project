@using DataAccess.Entities
@using Common
@model IEnumerable<Category>

<table class="table" id="categoryTable">
    <thead>
        <tr>
            <th scope="col"><input type="checkbox" class="chkId" id="chkAllIds" /></th>
            <th scope="col">
                Image
            </th>
            <th scope="col">
                Category Name
            </th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr class="clickable-row" data-propertyName="@item.Name">
                    <td scope="col">
                        <input type="checkbox" class="chkId" value="@item.Id" /></td>
                    <td scope="col">
                        <img src="@SD.ImgUrl/@item.CategoryImage" style="height:100px;" />
                    </td>
                    <td scope="col">
                        @item.Name
                    </td>
                    <td scope="col">@item.IsActivated</td>
                    <td scope="col">
                        <select class="setProgram">
                            <option value="">Select Action</option>
                            <option value="Styles">Product Styles</option>
                            <option value="Collection">Product Collection</option>
                        </select>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12"> No data found</td>
            </tr>
        }
    </tbody>
</table>