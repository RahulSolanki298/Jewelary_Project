@model DataAccess.Entities.DiamondProperty

@{
    ViewData["Title"] = "Create Diamond Property";

    

}

<h2>Create Diamond Property</h2>

<form asp-action="AddDiamondProperty" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" type="hidden" class="form-control" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ParentId" class="control-label"></label>
        <select asp-for="ParentId" class="form-control">
            <option value="">-- Select Parent --</option>
            @foreach (var item in ViewBag.ParentDrp)
            {
                @if (Model != null && Model.ParentId != null &&  item.Id == Model.ParentId)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>

        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IconPath" class="control-label"></label>
        <input asp-for="IconPath" class="form-control" />
        <span asp-validation-for="IconPath" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SymbolName" class="control-label"></label>
        <input asp-for="SymbolName" class="form-control" />
        <span asp-validation-for="SymbolName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ColorType" class="control-label"></label>
        <input asp-for="ColorType" class="form-control" />
        <span asp-validation-for="ColorType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DispOrder" class="control-label"></label>
        <input asp-for="DispOrder" class="form-control" />
        <span asp-validation-for="DispOrder" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsActivated" class="form-check-input" />
        <label asp-for="IsActivated" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
