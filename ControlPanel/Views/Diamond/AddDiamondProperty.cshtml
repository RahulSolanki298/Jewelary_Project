@model DataAccess.Entities.DiamondProperty

@{
    ViewData["Title"] = "Create Diamond Property";



}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col">
            <h4 class="text-uppercase fw-bold border-bottom pb-2">@ViewBag.Title</h4>
        </div>
    </div>
    <div class="row">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-xl-10">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-lg-10 col-md-10 col-sm-8">
                                <form asp-action="AddDiamondProperty" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input asp-for="Id" type="hidden" class="form-control" />

                                    <div class="form-group  mb-3">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="form-group  mb-4">
                                        <label asp-for="Description" class="control-label"></label>
                                        <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>



                                    <div class="form-group  mb-3">
                                        <label class="control-label">Main Property</label>
                                        <select asp-for="ParentId" class="form-control">
                                            <option value="">-- Select Parent --</option>
                                            @foreach (var item in ViewBag.ParentDrp)
                                            {
                                                @if (Model != null && Model.ParentId != null && item.Id == Model.ParentId)
                                                {
                                                    <option value="@item.Id" selected>@item.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            }
                                        </select>

                                        <span asp-validation-for="ParentId" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="control-label">Image Upload</label>
                                        <input type="file" name="UploadFile" id="UploadFile" class="form-control" accept="image/*" onchange="previewImage(event)" />
                                        <span asp-validation-for="IconPath" class="text-danger"></span>
                                    </div>

                                    <div class="form-group  mb-3">
                                        <label asp-for="SymbolName" class="control-label"></label>
                                        <input asp-for="SymbolName" class="form-control" />
                                        <span asp-validation-for="SymbolName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group  mb-3">
                                        <label asp-for="ColorType" class="control-label"></label>
                                        <input asp-for="ColorType" class="form-control" />
                                        <span asp-validation-for="ColorType" class="text-danger"></span>
                                    </div>

                                    <div class="form-group  mb-3">
                                        <label asp-for="DispOrder" class="control-label"></label>
                                        <input asp-for="DispOrder" class="form-control" />
                                        <span asp-validation-for="DispOrder" class="text-danger"></span>
                                    </div>

                                    <div class="form-check  mb-3">
                                        <input asp-for="IsActivated" class="form-check-input"    />
                                        <label asp-for="IsActivated" class="form-check-label">Is Activated</label>
                                    </div>

                                    <div class="form-check mb-3">
                                        <button type="submit" class="btn btn-theme mt-2">Submit</button>
                                        <a href="@Url.Action("Index","Diamond")" class="btn btn-danger mt-2">Back to list</a>
                                    </div>
                                </form>
                            </div>

                            <div class="col-lg-2 col-md-2 col-sm-4">
                                <div>
                                    @if (@Model.IconPath != null)
                                    {
                                        <img src="@Model.IconPath" id="imagePreview" class="img-fluid img-responsive img-thumbnail" />
                                    }
                                    else
                                    {
                                        <img src="~/assets/img/no-image.png" id="imagePreview" class="img-fluid img-responsive img-thumbnail" />

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    @section Scripts {
        <script>

            $(document).ready(function () {
                $('#Description').summernote({
                    height: 400,
                    minHeight: null,
                    maxHeight: null,
                    focus: true
                });
            });

            function previewImage(event) {
                const reader = new FileReader();
                reader.onload = function () {
                    const output = document.getElementById('imagePreview');
                    output.src = reader.result;
                    output.style.display = 'block';
                };
                reader.readAsDataURL(event.target.files[0]);
            }
        </script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
