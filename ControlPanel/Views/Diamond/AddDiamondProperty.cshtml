@model DataAccess.Entities.DiamondProperty

@{
    // ViewData["Title"] = "Create Diamond Property";



}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col">
            <h4 class="border-bottom pb-2"><b>@ViewBag.Title</b></h4>
        </div>
    </div>
    <div class="row">

        <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <form asp-action="AddDiamondProperty" method="post" enctype="multipart/form-data">
                        <div class="row">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" type="hidden" class="form-control" />

                            <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-4 p-1">
                                <div class="form-group">
                                    <b><label asp-for="Name" class="control-label"></label></b>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-4 p-1">
                                <div class="form-group">
                                    <b><label class="control-label">Main Property</label></b>
                                    <select asp-for="ParentId" class="form-control">
                                        <option value="">-- Select Parent --</option>
                                        @foreach (var item in ViewBag.ParentDrp)
                                        {
                                            @if (Model != null && Model.ParentId != null && item.Id == Model.ParentId)
                                            {
                                                <option value="@item.Id" selected>@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        }
                                    </select>

                                    <span asp-validation-for="ParentId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xxl-6 col-xl-6 col-lg-8 col-md-8 p-1">
                                <div class="form-group">
                                    <b><label asp-for="Description" class="control-label"></label></b>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-4 p-1">
                                <div class="form-group">
                                    <b><label class="control-label">Icon Image </label></b>
                                    <input type="file" name="UploadFile" id="UploadFile" class="form-control" accept="image/*" onchange="previewImage(event)" />
                                    <span asp-validation-for="IconPath" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-xl-4 col-lg-5 col-md-4 p-1">
                                <div class="form-group">
                                    <b><label asp-for="SymbolName" class="control-label"></label> (Ex. Round -- RND)</b>
                                    <input asp-for="SymbolName" class="form-control" />
                                    <span asp-validation-for="SymbolName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-xl-4 col-lg-5 col-md-4 p-1">
                                <div class="form-group">
                                    <b><label asp-for="ColorType" class="control-label"></label></b>  (For Color Property)
                                    <input asp-for="ColorType" class="form-control" />
                                    <span asp-validation-for="ColorType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-4 p-1">
                                <div class="form-group">
                                    <b><label asp-for="DispOrder" class="control-label"></label></b>
                                    <input asp-for="DispOrder" class="form-control" type="text" />
                                    <span asp-validation-for="DispOrder" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-4 p-1">
                                <div class="form-check">
                                    <br />
                                    <input asp-for="IsActivated" class="form-check-input" />
                                    <label asp-for="IsActivated" class="form-check-label">Is Activated</label>
                                </div>
                            </div>
                            <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-4 p-1">
                                @if (@Model.IconPath != null)
                                {
                                    <img src="@Model.IconPath" id="imagePreview" class="img-fluid img-responsive img-thumbnail" style="height:150px;" />
                                }
                                else
                                {
                                    <img src="~/assets/img/no-image.png" id="imagePreview" class="img-fluid img-responsive img-thumbnail" />

                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 p-1 offset-5">
                                <div class="form-check">
                                    <button type="submit" class="btn btn-theme mt-2">Submit</button>
                                    <a href="@Url.Action("DiamondProperty","Diamond")" class="btn btn-danger mt-2">Back to list</a>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            // $('#Description').summernote({
            //     height: 400,
            //     minHeight: null,
            //     maxHeight: null,
            //     focus: true
            // });
        });

        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                const output = document.getElementById('imagePreview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>

}
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}