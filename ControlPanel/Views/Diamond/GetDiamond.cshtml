@model Models.DiamondData

@{
    ViewData["Title"] = "GetDiamond";
}

<h2 class="mt-4 mb-3">Diamond Entry Form</h2>
<form asp-action="GetDiamond" class="container">
    <div class="row">
        <div class="col-md-6">
            <h4 class="text-primary">Basic Information</h4>
            <div class="form-group">
                <label asp-for="StoneId"></label>
                <input asp-for="StoneId" class="form-control" placeholder="Enter Stone ID" />
                <span asp-validation-for="StoneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DNA"></label>
                <input asp-for="DNA" class="form-control" />
                <span asp-validation-for="DNA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Step"></label>
                <input asp-for="Step" class="form-control" />
                <span asp-validation-for="Step" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeName"></label>
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Measurement"></label>
                <input asp-for="Measurement" class="form-control" />
                <span asp-validation-for="Measurement" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <h4 class="text-primary">Lab & Shape Info</h4>
            <div class="form-group">
                <label asp-for="LabId"></label>
                <input asp-for="LabId" class="form-control" />
                <span asp-validation-for="LabId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LabName"></label>
                <input asp-for="LabName" class="form-control" />
                <span asp-validation-for="LabName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShapeId"></label>
                <input asp-for="ShapeId" class="form-control" />
                <span asp-validation-for="ShapeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShapeName"></label>
                <input asp-for="ShapeName" class="form-control" />
                <span asp-validation-for="ShapeName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <h4 class="text-primary">Grading Details</h4>
            @* Repeat the grouping for Clarity, Color, Cut, Polish, Symmetry, Fluorescence *@
            <div class="form-group">
                <label asp-for="ClarityName"></label>
                <input asp-for="ClarityName" class="form-control" />
                <span asp-validation-for="ClarityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorName"></label>
                <input asp-for="ColorName" class="form-control" />
                <span asp-validation-for="ColorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CutName"></label>
                <input asp-for="CutName" class="form-control" />
                <span asp-validation-for="CutName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PolishName"></label>
                <input asp-for="PolishName" class="form-control" />
                <span asp-validation-for="PolishName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SymmetyName"></label>
                <input asp-for="SymmetyName" class="form-control" />
                <span asp-validation-for="SymmetyName" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <h4 class="text-primary">Pricing Info</h4>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RAP"></label>
                <input asp-for="RAP" class="form-control" />
                <span asp-validation-for="RAP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RapAmount"></label>
                <input asp-for="RapAmount" class="form-control" />
                <span asp-validation-for="RapAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
        </div>
    </div>

    <hr />

    <div class="form-group mt-3">
        <input type="submit" value="Save" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </div>
</form>
