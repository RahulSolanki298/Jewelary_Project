                            </td>
                            <td scope="col">@item.VenderName</td>
                            <td scope="col">@item.Sku</td>
                            <td scope="col">@item.ColorName</td>
                            <td scope="col">@item.Diameter</td>
                            <td scope="col">@item.Length</td>
                            <td scope="col">@item.BandWidth</td>
                            <td scope="col">@item.GoldWeight</td>
                            <td scope="col">@item.CTW</td>
                            <td scope="col">@item.CenterShapeName</td>
                            <td scope="col">@item.CenterCaratName</td>
                            <td scope="col">@item.Certificate</td>
                            <td scope="col">@item.Karat</td>
                            <td scope="col">@item.Price</td>
                            <td scope="col">@item.WholesaleCost</td>
                            <td scope="col">@item.AccentStoneShapeName</td>
                            <td scope="col">@item.MMSize</td>
                            <td scope="col">@item.DiaWT</td>
                            <td scope="col">@item.NoOfStones</td>
                            <td scope="col">@item.Grades</td>
