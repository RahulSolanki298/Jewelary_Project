
@{
    ViewData["Title"] = "ThankYouForUploaded";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        .container {
      background: #ffffff;
      padding: 50px 40px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      text-align: center;
      max-width: 600px;
      width: 100%;
    }

    h1 {
      color: #2e7d32;
      font-size: 32px;
      margin-bottom: 20px;
    }

    p {
      font-size: 18px;
      color: #444;
      margin-bottom: 40px;
    }

    .quit-button {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 12px 24px;
      background-color: #d32f2f;
      color: white;
      font-size: 16px;
      border: none;
      border-radius: 6px;
      text-decoration: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .quit-button:hover {
      background-color: #b71c1c;
    }

    .quit-button img {
      height: 20px;
      width: 20px;
    }

    </style>
}

<div class="container">
    <h1>🎉 Thank You!</h1>
    <p>Your product has been uploaded successfully.</p>
    <img src="~/assets/img/10024097.png" style="width:250px;" />
    <br/>
    <a href="@Url.Action("RequestedProductList","Jewellery")" class="btn btn-dark mt-3">
        Go to Activation
    </a>
</div>