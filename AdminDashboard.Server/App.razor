<CascadingAuthenticationState>
	<Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="true">
		<Found Context="routeData">
			<RouteView RouteData="@routeData" DefaultLayout="@GetLayout(routeData.PageType)" />
		</Found>
		<NotFound>
			<LayoutView Layout="@typeof(MainLayout)">
				<MudContainer MaxWidth="MaxWidth.Medium">
					<div class="d-flex flex-column">
						<!-- SVG Illustration -->
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 569 384.7" width="100%" height="100%" style="margin-top:25%; max-height:371.84px; max-width:550px;">
							<!-- ... your SVG paths ... -->
						</svg>
						<MudText Typo="Typo.h5" Class="mt-6" Align="Align.Center">
							The page you were looking for doesn't exist.
						</MudText>
					</div>
				</MudContainer>
			</LayoutView>
		</NotFound>
	</Router>
</CascadingAuthenticationState>

@code {
	private Type GetLayout(Type page)
	{
		// Replace 'YourNamespace.Pages.Login' with the actual full type name of your login page
		if (page.FullName?.Contains("Login") == true)
		{
			return typeof(LoginLayout);
		}

		return typeof(MainLayout);
	}
}
